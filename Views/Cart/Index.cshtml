@{
    ViewData["Title"] = "Giỏ hàng";
    var cartItems = ViewBag.CartItems as List<ThuQuan.Models.CartItem>;
}

<div class="container mt-4">
    <div class="row">
        <!-- Shopping Cart Section -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Giỏ hàng</h5>
                </div>
                <div class="card-body">
                    @if (cartItems != null && cartItems.Any())
                    {
                        foreach (var item in cartItems)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <img src="@item.ImageUrl" class="img-fluid rounded" alt="@item.Title">
                                        </div>
                                        <div class="col-md-10">
                                            <h5 class="card-title">@item.Title</h5>
                                            <p class="card-text">@item.Description</p>
                                            <button class="btn btn-sm btn-outline-secondary">Xoá</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p>Không có sản phẩm trong giỏ hàng.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Checkout Information Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Thông tin thuế</h5>
                    <small class="text-muted">Thông tin về ngày áp dụng</small>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="tax" class="form-label">Tên</label>
                        <input type="text" class="form-control" id="tax" placeholder="-">
                    </div>
                    <div class="mb-3">
                        <label for="taxDate" class="form-label">Chọn ngày thuế</label>
                        <select class="form-select" id="taxDate">
                            <option selected>-</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="taxValue" class="form-label">Giá trị</label>
                        <input type="text" class="form-control" id="taxValue" placeholder="0.00đ">
                    </div>
                    <button class="btn btn-dark w-100">Áp thuế</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Resources Section -->
    <div class="row mt-5">
        <div class="col-12">
            <h6>Resources</h6>
            <ul class="list-unstyled">
                <li><a href="#" class="text-decoration-none">Blog</a></li>
                <li><a href="#" class="text-decoration-none">Best practices</a></li>
                <li><a href="#" class="text-decoration-none">Colors</a></li>
                <li><a href="#" class="text-decoration-none">Color wheel</a></li>
                <li><a href="#" class="text-decoration-none">Support</a></li>
                <li><a href="#" class="text-decoration-none">Developers</a></li>
                <li><a href="#" class="text-decoration-none">Resource library</a></li>
            </ul>
        </div>
    </div>
</div>