@model ProductDetailViewModel
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<style>
    .product-image {
        max-height: 400px;
        object-fit: cover;
    }
    .price-section h3 {
        font-size: 1.5rem;
    }
    .specifications li {
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }
    .rental-days select {
        max-width: 150px;
    }
    .btn-rent {
        background-color: #343a40;
        color: white;
        font-weight: bold;
    }
    .btn-rent:hover {
        background-color: #23272b;
    }
</style>

<div class="container mt-5">
    <div class="row">
        <!-- Product Image Column -->
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid product-image rounded shadow-sm">
        </div>
        
        <!-- Product Details Column -->
        <div class="col-md-6">
            <h2 class="mb-1">@Model.Name</h2>
            
            <div class="category-badge mb-2">
                <span class="badge bg-success text-white">@Model.Category</span>
            </div>
            
            <div class="price-section mb-3">
                <h3 class="text-success fw-bold">@Model.FormattedPrice/ngày</h3>
                <p class="text-muted small">
                    @Model.Description
                </p>
            </div>
            
            <div class="rental-days mb-4">
                <label for="rentalDays" class="form-label">Số ngày thuê</label>
                <select class="form-control rental-days" id="rentalDays">
                    <option value="1">1 ngày</option>
                    <option value="2">2 ngày</option>
                    <option value="3">3 ngày</option>
                    <option value="4">4 ngày</option>
                    <option value="5">5 ngày</option>
                    <option value="6">6 ngày</option>
                    <option value="7">7 ngày</option>
                </select>
            </div>
            
            <button type="button" class="btn btn-rent w-100 py-2 mb-3">
                Thuê
            </button>
            
            <div class="specifications mt-4">
                <h5>Thông số kỹ thuật:</h5>
                <ul class="list-unstyled">
                    @foreach (var spec in Model.Specifications)
                    {
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i> @spec</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>