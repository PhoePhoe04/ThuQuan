@model List<ProductViewModel>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="container mt-4">
    <h1 class="mb-4">Danh sách thiết bị cho thuê</h1>
    
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 product-card">
                    <img src="@product.ImageUrl" class="card-img-top product-thumbnail" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <span class="badge bg-light text-dark mb-2">@product.Category</span>
                        <p class="card-text text-success fw-bold">@product.FormattedPrice</p>
                        <p class="card-text small text-muted">@product.ShortDescription</p>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id" class="btn btn-outline-dark w-100">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
