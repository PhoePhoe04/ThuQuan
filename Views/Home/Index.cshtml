@{
    ViewData["Title"] = "Trang chủ";
}

<style>
    .bg-yellow { background-color:rgb(255, 255, 255); }
    .navbar-brand img { height: 40px; }
    .nav-link { color: #000 !important; }
    .nav-link:hover { color: #FFF !important; }
    .intro-section {
    background-color: #6c757d; /* Màu xám giống hình */
    position: relative;
    }
    .intro-section h1 {
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }
    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .card-img-top {
        object-fit: cover;
        height: 200px;
    }
    .carousel-caption {
        background: rgba(0, 0, 0, 0.5); /* Lớp phủ tối cho chữ dễ đọc */
        padding: 20px;
        border-radius: 10px;
    }
</style>


<div class="container" style="text-align:center;">
    <div id="bannerCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <!-- Các slide -->
        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active">
                <div class="intro-section text-center text-white" style="background-color:rgb(163, 163, 163); padding: 100px 0; height: 400px;">
                <h1 class="display-3">THƯ QUÁN SGU</h1>
                <p class="lead">Chào mừng bạn đến với hệ thống thuê thiết bị</p>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item">
                <img src="\images\sgu-2_1280x720-800-resize.jpg" class="d-block w-100" alt="Slide 2" style="height: 400px; object-fit: cover;">
            </div>
            <div class="carousel-item">
                <img src="https://dtsdh.sgu.edu.vn/wp-content/uploads/2019/11/slider2_1240x450.jpg" class="d-block w-100" alt="Slide 3" style="height: 400px; object-fit: cover;">
            </div>
        </div>

        <!-- Nút điều khiển (trái/phải) -->
        <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="text-center my-5">
        <h1 class="display-4">Chào mừng đến với Thư Quán N7</h1>
        <p class="lead">Nơi cho thuê và cung cấp các thiết bị chất lượng!</p>
    </div>

    <div class="row text-center" style="text-align:center;">
        <div class="col-md-4 mb-4" style="display: inline-block;margin:auto">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Thuê thiết bị</h5>
                    <p class="card-text">Tìm kiếm và thuê các thiết bị phục vụ nhu cầu học tập, nghiên cứu hoặc sự kiện.</p>
                    <a asp-controller="Thue" asp-action="Index" class="btn btn-primary">Xem thiết bị</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4" style="display: inline-block;margin:auto">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Chính sách & bảo mật</h5>
                    <p class="card-text">Tìm hiểu về chính sách sử dụng và quyền riêng tư tại Thư Quán.</p>
                    <a asp-controller="Home" asp-action="Privacy" class="btn btn-secondary">Xem chi tiết</a>
                </div>
            </div>
        </div>
    </div>
</div>


