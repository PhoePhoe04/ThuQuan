@model Device

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <h2>@Model.Name</h2>
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded">
        </div>
        <div class="col-md-6">
            <p><strong>Mô tả:</strong> @Model.Description</p>
            <p><strong>Giá thuê:</strong> @Model.Price/ngày</p>
            <p><strong>Số lượng:</strong> @Model.Quantity</p>
            <p><strong>Trạng thái:</strong> @Model.Status</p>
            <p><strong>Danh mục:</strong> @Model.Category.Name</p>
            <a href="/Thue/Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div>
